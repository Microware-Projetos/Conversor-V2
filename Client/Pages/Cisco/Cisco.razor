@page "/cisco"
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components
@using System.IO
@inject NavigationManager Navigation

<PageTitle>Cisco</PageTitle>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>Upload de Arquivos Excel - Cisco</h2>
        <img src="images/cisco.png" alt="cisco Logo" style="height:40px;" />
    </div>
    <div class="card-body">
        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <a class="nav-link active" href="#">Upload para WooCommerce</a>
            </li>
        </ul>
        
        @if (!string.IsNullOrEmpty(mensagem))
        {
            <div class="alert @(mensagem.Contains("Erro") ? "alert-danger" : mensagem.Contains("sucesso") ? "alert-success" : "alert-info") alert-dismissible fade show" role="alert">
                @mensagem
                <button type="button" class="btn-close" @onclick="LimparMensagem"></button>
            </div>
        }
        
        <div class="mb-3">
            <label for="tipoUpload" class="form-label">Tipo de Upload</label>
            <select id="tipoUpload" class="form-select" @bind="tipoUpload">
                <option value="ListaReal">Lista Cisco Real (BRL)</option>
                <option value="ListaDolar">Lista Cisco Real (USD)</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="arquivoProdutos" class="form-label">Arquivo de Produtos</label>
            <InputFile id="arquivoProdutos" class="form-control" OnChange="OnProdutosFileChange" accept=".xlsx,.xls,.csv" maxAllowedSize="52428800" />
            <small class="form-text text-muted">Tamanho máximo: 50MB</small>
        </div>
        @if (tipoUpload == "ListaDolar")
        {
            <div class="mb-3">
                <label for="valorDolar" class="form-label">Valor do Dólar (USD)</label>
                <div class="input-group">
                    <span class="input-group-text">R$</span>
                    <input type="number" id="valorDolar" class="form-control" @bind="valorDolar" step="0.01" min="0" />
                </div>
            </div>
        }
        <button class="btn btn-primary w-100" type="button" @onclick="EnviarParaWooCommerce" disabled="@isLoading">
            @if (isLoading)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                <span>Enviando...</span>
            }
            else
            {
                <i class="bi bi-upload"></i>
                <span>Enviar para WooCommerce</span>
            }
        </button>
        <div class="mt-4">
            <h5 class="mb-2">
                <i class="bi bi-database me-2"></i>
                Acessar Banco de Dados
            </h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="card border-primary h-100">
                        <div class="card-body text-center">
                            <h6 class="card-title text-primary">
                                <i class="bi bi-currency-real me-2"></i>
                                Banco Real (BRL)
                            </h6>
                            <p class="card-text small text-muted mb-3">
                                Visualizar e editar produtos da lista em reais
                            </p>
                            <button class="btn btn-outline-primary" @onclick="NavigateToReal">
                                <i class="bi bi-eye me-2"></i>
                                Ver Banco Real
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-success h-100">
                        <div class="card-body text-center">
                            <h6 class="card-title text-success">
                                <i class="bi bi-currency-dollar me-2"></i>
                                Banco Dólar (USD)
                            </h6>
                            <p class="card-text small text-muted mb-3">
                                Visualizar e editar produtos da lista em dólares
                            </p>
                            <button class="btn btn-outline-success" @onclick="NavigateToDolar">
                                <i class="bi bi-eye me-2"></i>
                                Ver Banco Dólar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <div id="infoBancoReal" class="text-center">
                            <div class="text-center">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="text-primary fw-bold">0</div>
                                        <small class="text-muted">Total</small>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-success fw-bold">0</div>
                                        <small class="text-muted">Disponível</small>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-warning fw-bold">0</div>
                                        <small class="text-muted">Indisponíveis</small>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-2"></i>
                                        Última atualização: Nunca
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="infoBancoDolar" class="text-center">
                            <div class="text-center">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="text-primary fw-bold">748</div>
                                        <small class="text-muted">Total</small>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-success fw-bold">748</div>
                                        <small class="text-muted">Disponível</small>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-warning fw-bold">0</div>
                                        <small class="text-muted">Indisponíveis</small>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-2"></i>
                                        Última atualização: 21/08/2025 17:22:04:00
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
